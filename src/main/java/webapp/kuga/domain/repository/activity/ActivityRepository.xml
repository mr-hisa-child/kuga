<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="webapp.kuga.domain.repository.activity.ActivityRepository">
    <sql id="activityColumns"> ${alias}.id,${alias}.team_id,${alias}.title,${alias}.year,${alias}.month,${alias}.day </sql>

    <insert id="insert">
        INSERT 
            INTO 
                activity (
                    id,
                    team_id,
                    title, 
                    year,
                    month,
                    day
                ) 
            VALUES (
                #{id},
                #{teamId},
                #{title}, 
                #{year},
                #{month},
                #{day}
            )
    </insert>
    <update id="update">
        UPDATE
                activity
            SET
                title = #{title},
                year = #{year},
                month = #{month},
                day = #{day}
            WHERE
                id = #{id}
    </update>
    <select id="select" resultType="webapp.kuga.domain.model.Activity">
        SELECT
        <include refid="activityColumns">
            <property name="alias" value="a" />
        </include>
            FROM 
                activity a
            WHERE 
                a.id = #{id}
    </select>

    <select id="selectByTeamId" resultType="webapp.kuga.domain.model.Activity">
        SELECT
        <include refid="activityColumns">
            <property name="alias" value="a" />
        </include>
            FROM 
                activity a
            WHERE 
                a.team_id = #{teamId}
    </select>
</mapper>