<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="webapp.kuga.domain.repository.member.MemberRepository">
    <sql id="memberColumns"> ${alias}.id,${alias}.name,${alias}.no </sql>

    <insert id="insert">
        INSERT 
            INTO 
                member (
                    id,
                    name, 
                    no,
                    team_id
                ) 
            VALUES (
                #{id},
                #{name}, 
                #{no},
                #{teamId}
            )
    </insert>
    <update id="update">
        UPDATE
                member
            SET
                name = #{name},
                no = #{no}
            WHERE
                id = #{id}
    </update>
    <select id="select" resultType="webapp.kuga.domain.model.Member">
        SELECT
        <include refid="memberColumns">
            <property name="alias" value="a" />
        </include>
            FROM 
                member a
            WHERE 
                a.id = #{id}
    </select>

    <select id="selectByTeamId" resultType="webapp.kuga.domain.model.Member">
        SELECT
        <include refid="memberColumns">
            <property name="alias" value="a" />
        </include>
            FROM 
                member a
            WHERE 
                a.team_id = #{teamId}
    </select>
</mapper>